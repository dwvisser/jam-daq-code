<?xml version="1.0" encoding="UTF-8"?>
<project name="Jam Project" default="all">

    <property name="base.dir" value="." />
    <property name="build.dir" value="${user.home}/jambuild" />
    <property name="APIbase.dir" value="${build.dir}/APItemp" />
    <property name="API.dir" value="${APIbase.dir}/help/API" />
	<property name = "windows" value = "${build.dir}/windows/jam-daq" />
	<property name = "winbin" value="${windows}/bin" />
	<property name = "winlib" value="${windows}/lib" />
    
    <target name="prepare" depends="clean">
        <mkdir dir="${API.dir}" />
    </target>
    
    <target name="clean">
    	<delete >
    		<fileset
    			dir="${base.dir}"
    			includes="**\*.bak"
    		/>
    		</delete>
    		<delete dir="${build.dir}" />
    </target>
    
    <target name="jar" depends="prepare">
        <jar jarfile="${build.dir}/Jam.jar"
            basedir="${base.dir}"
            excludes="*.xml,*.jardesc,*.jar,help\API\**\*,jam\**\*.java,jam\**\*.html,jam\**\*.chk,jam\**\*.bak,.classpath,.project"
        />    
    </target>

    <target name="srcjar" depends="prepare">
        <jar jarfile="${build.dir}/JamSrc.jar"
            basedir="${base.dir}"
            includes="jam\**\*.java"
        />    
    </target>
    
    <target name="apijar" depends="prepare,javadoc">
        <jar jarfile="${build.dir}/JamAPI.jar"
            basedir="${APIbase.dir}"
            includes="help\API\**\*"
        />    
    	<delete dir="${APIbase.dir}" />
    </target>
    
    <target name="copy" depends="prepare">
        <copy todir="${build.dir}" flatten="true" >
            <fileset dir = "${base.dir}"
                includes="*.jar,*.txt,*.html,help/config/*.ini" >
            </fileset>
        </copy>
    </target>
    
    <target name="javadoc">
        <javadoc
            destdir="${API.dir}"
            access="protected" use="true" notree="false"
            nonavbar="false" noindex="false" splitindex="true"
            author="true" version="true" nodeprecatedlist="false"
            nodeprecated="false"
            packagenames="jam.io,jam.data.control,jam.io.hdf,jam.data.peaks,jam.global,jam.fit,jam.util,jam.sort,jam,jam.data.func,jam.sort.stream,jam.plot,jam.data,jam.applet"
            sourcepath="${base.dir}"
            classpath="${base.dir};${base.dir}\jlfgr-1_0.jar;${base.dir}\junit.jar;${base.dir}\jh.jar" 
            	doctitle="Jam - API"/>
    </target>

    <target name="windows" depends="jar,srcjar,apijar"
    description="Make Windows executables to go with that release">
    	<copy todir="${winlib}">
    	 	<fileset dir="${build.dir}" includes="*.jar" />
    	</copy>
    	<copy todir="${windows}" file="jam.ico" />
    	<copy todir="${windows}" flatten="true">
    		<fileset dir="${src.dir}/WINpackage" includes="*.jsmooth" />
    	</copy>
    	<jsmoothgen project="${windows}/jam.jsmooth" 
      		skeletonroot="C:\\Program Files\\JSmooth 0.9.5\\skeletons"/>
      	<zip zipfile="${build.dir}/jam-windows.zip" basedir="${windows}"
      	excludes="*.jsmooth,**/*.ico" />
    </target>
    
    <target name="all" depends="copy,windows" />
        
</project>
